<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="tech.frits.scorecounter.MainActivity"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Team A"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/score_team1_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="40dp" />

            <Button
                android:id="@+id/t1_button_plus_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:background="@drawable/ripple"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="IncreaseScoreClick"/>

            <Button
                android:id="@+id/t1_button_plus_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+2 Points"
                android:background="@drawable/ripple"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:onClick="IncreaseScoreClick"/>

            <Button
                android:id="@+id/t1_button_plus_1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free throw"
                android:layout_marginTop="10dp"
                android:background="@drawable/ripple"
                android:layout_gravity="center_horizontal"
                android:onClick="IncreaseScoreClick"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:textAlignment="center"
            android:background="@drawable/border_set">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Team B"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/score_team_2_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="sans-serif-light"
                android:text="0"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="40dp" />

            <Button
                android:id="@+id/t2_button_plus_3"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="+3 points"
                android:background="@drawable/ripple"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:onClick="IncreaseScoreClick"/>

            <Button
                android:id="@+id/t2_button_plus_2"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+2 Points"
                android:background="@drawable/ripple"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:onClick="IncreaseScoreClick"/>

            <Button
                android:id="@+id/t2_button_plus_1"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Free throw"
                android:background="@drawable/ripple"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:onClick="IncreaseScoreClick" />

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/reset_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="12dp"
            android:text="Reset"
            android:background="@drawable/ripple"
            android:textColor="#000"
            android:onClick="ResetScores"/>
    </RelativeLayout>

</LinearLayout>
